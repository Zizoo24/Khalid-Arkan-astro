---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout>
    <div class="body">
        <Header />

        <!-- HERO SECTION -->
        <section class="hero-arkan">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-7">
                        <p class="section-subtitle mb-3 appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="200">
                            High-Stakes Interpretation Services
                        </p>
                        <h1 class="appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="400">
                            In the Courtroom, <span class="gold-text">Nuance is Evidence.</span>
                        </h1>
                        <p class="lead mb-4 appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="600">
                            We deploy Ministry of Justice certified interpreters who understand the weight of every word. When failure isn't an option, Arkan is the safe choice for critical communications.
                        </p>
                        <div class="d-flex flex-wrap gap-3 mb-5 appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="800">
                            <a href="/contact" class="btn btn-arkan-primary btn-lg">
                                Schedule Consultation
                                <i class="fas fa-arrow-right ms-2"></i>
                            </a>
                            <a href="#services" class="btn btn-arkan-outline btn-lg">
                                Our Services
                            </a>
                        </div>
                        <div class="hero-stats appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="1000">
                            <div class="hero-stat">
                                <span class="hero-stat-number">15+</span>
                                <span class="hero-stat-label">Years Experience</span>
                            </div>
                            <div class="hero-stat">
                                <span class="hero-stat-number">50+</span>
                                <span class="hero-stat-label">Languages</span>
                            </div>
                            <div class="hero-stat">
                                <span class="hero-stat-number">100%</span>
                                <span class="hero-stat-label">MOJ Certified</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-5 d-none d-lg-block">
                        <div class="text-center appear-animation" data-appear-animation="fadeIn" data-appear-animation-delay="600">
                            <img src="/img/hero-interpreter.png" alt="Professional Interpreter" class="img-fluid" onerror="this.style.display='none'">
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- TRUST SIGNALS SECTION -->
        <section class="trust-section">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-6">
                        <div class="trust-badge appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="200">
                            <div class="trust-badge-icon">
                                <i class="fas fa-certificate"></i>
                            </div>
                            <h5>MOJ Licensed</h5>
                            <p>All interpreters sworn before UAE Courts per Federal Law No. 6 of 2012</p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <div class="trust-badge appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="400">
                            <div class="trust-badge-icon">
                                <i class="fas fa-shield-alt"></i>
                            </div>
                            <h5>ISO Certified</h5>
                            <p>ISO 18841 & ISO 20228 compliant interpretation services</p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <div class="trust-badge appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="600">
                            <div class="trust-badge-icon">
                                <i class="fas fa-lock"></i>
                            </div>
                            <h5>Eavesdrop-Proof</h5>
                            <p>Infrared technology ensures your sensitive discussions stay confidential</p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <div class="trust-badge appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="800">
                            <div class="trust-badge-icon">
                                <i class="fas fa-balance-scale"></i>
                            </div>
                            <h5>Fully Insured</h5>
                            <p>Professional indemnity coverage for complete peace of mind</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- SERVICES SECTION -->
        <section id="services" class="services-section">
            <div class="container">
                <div class="text-center mb-5">
                    <p class="section-subtitle appear-animation" data-appear-animation="fadeInUpShorter">What We Offer</p>
                    <h2 class="section-title appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="200">
                        Specialized Interpretation Services
                    </h2>
                    <p class="section-description appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="400">
                        From courtrooms to conference halls, we provide precision interpretation where accuracy is an asset class and failure carries consequences.
                    </p>
                </div>
                <div class="row">
                    <!-- Legal & Court -->
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="service-card appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="200">
                            <div class="service-icon">
                                <i class="fas fa-gavel"></i>
                            </div>
                            <h4>Legal & Court Interpretation</h4>
                            <p>Sworn interpreters for Dubai Courts, DIFC, ADGM, arbitration proceedings, and police investigations. We understand the nuance between civil law and common law concepts.</p>
                            <a href="/services/legal-interpretation" class="service-link">
                                Learn More <i class="fas fa-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                    <!-- Medical -->
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="service-card appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="400">
                            <div class="service-icon">
                                <i class="fas fa-heartbeat"></i>
                            </div>
                            <h4>Medical Interpretation</h4>
                            <p>Medical concierge interpreters with domain-specific terminology in oncology, fertility, cosmetic surgery, and more. From airport to recovery room.</p>
                            <a href="/services/medical-interpretation" class="service-link">
                                Learn More <i class="fas fa-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                    <!-- Conference & Events -->
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="service-card appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="600">
                            <div class="service-icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <h4>Conference & Events</h4>
                            <p>Full-service conference interpretation with ISO 4043 compliant booths, Bosch Integrus digital systems, and experienced interpretation teams.</p>
                            <a href="/services/conference-interpretation" class="service-link">
                                Learn More <i class="fas fa-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                    <!-- RSI -->
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="service-card appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="800">
                            <div class="service-icon">
                                <i class="fas fa-globe"></i>
                            </div>
                            <h4>Remote Simultaneous (RSI)</h4>
                            <p>Platform-agnostic RSI services via KUDO, Interprefy, or Zoom. Our Remote Interpretation Hub provides enterprise-grade reliability with redundant infrastructure.</p>
                            <a href="/services/rsi" class="service-link">
                                Learn More <i class="fas fa-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                    <!-- Equipment Rental -->
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="service-card appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="1000">
                            <div class="service-icon">
                                <i class="fas fa-headphones"></i>
                            </div>
                            <h4>Equipment Rental</h4>
                            <p>Bosch Integrus digital infrared systems, ISO 4043 compliant booths, and professional-grade headsets. Technology failures eliminated.</p>
                            <a href="/services/equipment-rental" class="service-link">
                                Learn More <i class="fas fa-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                    <!-- Saudi Gateway -->
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="service-card appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="1200">
                            <div class="service-icon">
                                <i class="fas fa-plane"></i>
                            </div>
                            <h4>Saudi Gateway Service</h4>
                            <p>Fly-in interpretation teams for Saudi Arabia's Giga Projects. We manage visas, travel, and accommodation to deliver UAE-quality interpreters on-site in the Kingdom.</p>
                            <a href="/services/saudi-gateway" class="service-link">
                                Learn More <i class="fas fa-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- INTERPRETATION MODES SECTION -->
        <section id="modes" class="modes-section">
            <div class="container">
                <div class="text-center mb-5">
                    <p class="section-subtitle appear-animation" data-appear-animation="fadeInUpShorter">Understanding Your Options</p>
                    <h2 class="section-title appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="200">
                        Interpretation Modes
                    </h2>
                    <p class="section-description appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="400">
                        Different situations demand different approaches. We guide you to the right mode for your specific event topology.
                    </p>
                </div>
                <div class="row">
                    <!-- Simultaneous -->
                    <div class="col-lg-4 mb-4">
                        <div class="mode-card appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="200">
                            <div class="mode-card-header">
                                <i class="fas fa-bolt"></i>
                                <h4>Simultaneous</h4>
                            </div>
                            <div class="mode-card-body">
                                <p>Real-time interpretation with milliseconds delay. A cognitive marathon requiring rotating teams of 2-3 interpreters per language.</p>
                                <ul class="mode-use-cases">
                                    <li><i class="fas fa-check"></i> International Summits</li>
                                    <li><i class="fas fa-check"></i> Live Broadcasts</li>
                                    <li><i class="fas fa-check"></i> Bilingual Board Meetings</li>
                                    <li><i class="fas fa-check"></i> Large Conferences</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- Consecutive -->
                    <div class="col-lg-4 mb-4">
                        <div class="mode-card appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="400">
                            <div class="mode-card-header">
                                <i class="fas fa-clipboard-list"></i>
                                <h4>Consecutive</h4>
                            </div>
                            <div class="mode-card-body">
                                <p>Speaker pauses, interpreter renders. Maximum precision through specialized note-taking techniques. The only acceptable mode for sworn testimony.</p>
                                <ul class="mode-use-cases">
                                    <li><i class="fas fa-check"></i> Court Testimony</li>
                                    <li><i class="fas fa-check"></i> Medical Consultations</li>
                                    <li><i class="fas fa-check"></i> HR Disciplinary Hearings</li>
                                    <li><i class="fas fa-check"></i> Depositions</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- Whispered -->
                    <div class="col-lg-4 mb-4">
                        <div class="mode-card appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="600">
                            <div class="mode-card-header">
                                <i class="fas fa-user-secret"></i>
                                <h4>Whispered (Chuchotage)</h4>
                            </div>
                            <div class="mode-card-body">
                                <p>Discreet, executive-level interpretation. The interpreter sits beside 1-2 listeners and whispers the translation in real-time.</p>
                                <ul class="mode-use-cases">
                                    <li><i class="fas fa-check"></i> VIP Escorts</li>
                                    <li><i class="fas fa-check"></i> Site Visits & Factory Tours</li>
                                    <li><i class="fas fa-check"></i> State Dinners</li>
                                    <li><i class="fas fa-check"></i> Court Arraignments</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- VALUE PROPOSITION SECTION -->
        <section class="value-prop-section">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6 mb-5 mb-lg-0">
                        <p class="section-subtitle appear-animation" data-appear-animation="fadeInUpShorter">The Arkan Difference</p>
                        <h2 class="section-title appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="200">
                            Why High-Stakes Clients Choose Arkan
                        </h2>
                        <p class="mb-4 appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="400">
                            A single mistranslated clause in arbitration can cost millions. Precision is an asset class. We position ourselves as your compliance partner, not just a vendor.
                        </p>

                        <div class="value-prop-item appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="600">
                            <div class="value-prop-icon">
                                <i class="fas fa-user-tie"></i>
                            </div>
                            <div class="value-prop-content">
                                <h5>Curated Roster, Not Open</h5>
                                <p>We work with career interpreters, many holding UN accreditation or MOJ certification. Each vetted for specific domain expertise.</p>
                            </div>
                        </div>

                        <div class="value-prop-item appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="800">
                            <div class="value-prop-icon">
                                <i class="fas fa-balance-scale-right"></i>
                            </div>
                            <div class="value-prop-content">
                                <h5>Dual-System Expertise</h5>
                                <p>We understand the difference between DIFC Common Law and UAE Civil Law proceedings. Our interpreters are trained in both jurisprudential frameworks.</p>
                            </div>
                        </div>

                        <div class="value-prop-item appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="1000">
                            <div class="value-prop-icon">
                                <i class="fas fa-cogs"></i>
                            </div>
                            <div class="value-prop-content">
                                <h5>Enterprise-Grade Infrastructure</h5>
                                <p>Technology fails. That's why our RSI protocols mandate hardwired redundancies and on-site technicians for every high-stakes event.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="gold-border-left ps-4 appear-animation" data-appear-animation="fadeIn" data-appear-animation-delay="400">
                            <blockquote class="mb-4">
                                <p class="font-weight-light text-4 line-height-8 mb-3" style="font-style: italic; color: #555;">
                                    "In the courtroom, nuance is evidence. Arkan's interpreters understood not just our words, but the legal weight behind every clause. They're not translatorsâ€”they're strategic assets."
                                </p>
                                <footer class="blockquote-footer mt-2">
                                    Managing Partner, <cite title="Source Title">International Law Firm, DIFC</cite>
                                </footer>
                            </blockquote>

                            <div class="mt-5 p-4 bg-arkan-navy rounded">
                                <h5 class="text-white mb-3">
                                    <i class="fas fa-file-download text-arkan-gold me-2"></i>
                                    Event Specs Checklist
                                </h5>
                                <p class="text-white-50 mb-3">
                                    Don't let vague specs ruin your budget. Download our RFP Template for Interpretation Services.
                                </p>
                                <a href="/downloads/rfp-template.pdf" class="btn btn-arkan-gold-outline btn-sm">
                                    Download Template <i class="fas fa-download ms-2"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- CTA SECTION -->
        <section class="cta-section">
            <div class="container">
                <h2 class="appear-animation" data-appear-animation="fadeInUpShorter">
                    Secure Your Event's Communication Integrity
                </h2>
                <p class="appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="200">
                    Schedule a consultation to discuss your interpretation requirements with our specialists.
                </p>
                <div class="appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="400">
                    <a href="/contact" class="btn btn-arkan-primary btn-lg me-3 mb-3">
                        Request Consultation
                    </a>
                    <a href="tel:+97142345678" class="btn btn-arkan-outline btn-lg mb-3">
                        <i class="fas fa-phone-alt me-2"></i>
                        +971 4 234 5678
                    </a>
                </div>
            </div>
        </section>

        <Footer />
    </div>
</Layout>
